{
	"compilerOptions": {
		"noImplicitAny": true,
		"noEmitOnError": true,
		"removeComments": false,
		"allowJs": true,
		"target": "ES2017",
		"module": "ES2015",
		"rootDir": "wwwroot",
		"lib": [ "ES2015", "ES2017", "DOM" ]
	},
	"include": [
		"wwwroot/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
