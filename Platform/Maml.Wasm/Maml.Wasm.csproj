<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<TargetArchitecture>wasm</TargetArchitecture>
		<TargetOS>Browser</TargetOS>
		<RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
		<UseMonoRuntime>false</UseMonoRuntime>
		<WasmMainJSPath>wwwroot/main.js</WasmMainJSPath>
		<OutputType>Exe</OutputType>
		<WasmEnableES6>true</WasmEnableES6>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Nullable>enable</Nullable>
	</PropertyGroup>


	<!-- TypeScript -->
	<PropertyGroup>
		<TypeScriptOutDir></TypeScriptOutDir>
		<TypeScriptTarget>ES2017</TypeScriptTarget>
		<TypeScriptNoImplicitAny>true</TypeScriptNoImplicitAny>
		<TypeScriptRemoveComments>false</TypeScriptRemoveComments>
	</PropertyGroup>

	<PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	</PropertyGroup>

	<PropertyGroup Label="Configuration" Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<TypeScriptSourceMap>False</TypeScriptSourceMap>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.8.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	<!-- /TypeScript -->

	<!-- Dependencies -->
	<ItemGroup>
		<None Include="**/*.js">
			<DependentUpon>%(Filename).ts</DependentUpon>
		</None>
		<None Include="**/*.js.map">
			<DependentUpon>%(Filename)</DependentUpon>
		</None>
	</ItemGroup>
	<!-- /Dependencies -->

	<!-- ExtraFiles -->
	<ItemGroup>
		<WasmExtraFilesToDeploy Include="wwwroot/**/*.html" />
		<WasmExtraFilesToDeploy Include="wwwroot/**/*.js" />
		<WasmExtraFilesToDeploy Include="wwwroot/**/*.json" />
		<WasmExtraFilesToDeploy Condition="$(Configuration) == Debug" Include="**/*.ts" />
		<WasmExtraFilesToDeploy Condition="$(Configuration) == Debug" Include="**/*.js.map" />
	</ItemGroup>
	<!-- /ExtraFiles -->

	<!-- HideThisForSomeReason -->
	<ItemGroup>
		<Compile Remove="bin\**" />
		<EmbeddedResource Remove="bin\**" />
		<None Remove="bin\**" />
		<TypeScriptCompile Remove="bin\**" />
		<WasmExtraFilesToDeploy Remove="bin\**" />
	</ItemGroup>
	<ItemGroup>
	  <None Update="wwwroot\index.html">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
	<!-- /HideThisForSomeReason -->

	<Import Project="..\..\Maml.Shared\Maml.Shared.projitems" Label="Shared" />

	<ProjectExtensions><VisualStudio><UserProperties wwwroot_4manifest_1json__JsonSchema="" /></VisualStudio></ProjectExtensions>

</Project>
